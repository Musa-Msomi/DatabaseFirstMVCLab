@model PLDatabaseFirstMVC.Models.Club

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name);
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<div class="card mb-3">
  <h3 class="card-header">@Html.DisplayFor(model => model.Nickname)</h3>
  <div class="card-body">
      <img class = "card-img-top" src = "@Url.Content(Model.CrestUrl)" width="200" height="200" >
      <dl>
    <dt class = "card-title">@Html.DisplayNameFor(model => model.Stadium)</dt>
    <dd class = "card-subtitle">@Html.DisplayFor(model => model.Stadium)</dd>
    <dt class = "card-title">@Html.DisplayNameFor(model => model.StadiumCapacity)</dt>
    <dd class = "card-subtitle">@Html.DisplayFor(model => model.StadiumCapacity)</dd>
    <dt class = "card-title">@Html.DisplayNameFor(model => model.City)</dt>
    <dd class = "card-subtitle">@Html.DisplayFor(model => model.City)</dd>
    <dt class = "card-title">@Html.DisplayNameFor(model => model.Manager)</dt>
    <dd class = "card-subtitle">@Html.DisplayFor(model => model.Manager)</dd>
    </dl>
  </div>

</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClubId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
